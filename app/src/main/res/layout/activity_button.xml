<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_margin="2dp"
            android:background="@drawable/ripple_effect2"
            android:id="@+id/ac"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="AC"
            android:textSize="30dp" />
        <Button
            android:layout_margin="2dp"
            android:background="@drawable/ripple_effect2"
            android:id="@+id/btn_square"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="x^2"
            android:textSize="30dp" />
        <Button
            android:layout_margin="2dp"
            android:background="@drawable/ripple_effect2"
            android:id="@+id/btn_sqrt"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="SQRT"
            android:textSize="30dp" />
        <Button
            android:layout_margin="2dp"
            android:background="@drawable/ripple_effect"
            android:id="@+id/div"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="/"
            android:textSize="30dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_margin="2dp"
            android:background="@drawable/ripple_effect2"
            android:id="@+id/seven"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="7"
            android:textSize="30dp" />
        <Button
            android:layout_margin="2dp"
            android:background="@drawable/ripple_effect2"
            android:id="@+id/eight"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="8"
            android:textSize="30dp" />
        <Button
            android:layout_margin="2dp"
            android:background="@drawable/ripple_effect2"
            android:id="@+id/nine"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="9"
            android:textSize="30dp" />
        <Button
            android:layout_margin="2dp"
            android:background="@drawable/ripple_effect"
            android:id="@+id/multi"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="x"
            android:textSize="30dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_margin="2dp"
            android:background="@drawable/ripple_effect2"
            android:id="@+id/four"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="4"
            android:textSize="30dp" />
        <Button
            android:layout_margin="2dp"
            android:background="@drawable/ripple_effect2"
            android:id="@+id/five"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="5"
            android:textSize="30dp" />
        <Button
            android:layout_margin="2dp"
            android:background="@drawable/ripple_effect2"
            android:id="@+id/six"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="6"
            android:textSize="30dp" />
        <Button
            android:layout_margin="2dp"
            android:background="@drawable/ripple_effect"
            android:id="@+id/sub"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="30dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_margin="2dp"
            android:background="@drawable/ripple_effect2"
            android:id="@+id/one"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="30dp" />
        <Button
            android:layout_margin="2dp"
            android:background="@drawable/ripple_effect2"
            android:id="@+id/two"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="2"
            android:textSize="30dp" />
        <Button
            android:layout_margin="2dp"
            android:background="@drawable/ripple_effect2"
            android:id="@+id/three"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="3"
            android:textSize="30dp" />
        <Button
            android:layout_margin="2dp"
            android:background="@drawable/ripple_effect"
            android:id="@+id/btn_sum"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="+"
            android:textSize="30dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_margin="2dp"
            android:background="@drawable/ripple_effect2"
            android:id="@+id/zero"
            android:layout_weight="0.51"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="30dp" />
        <Button
            android:layout_margin="2dp"
            android:background="@drawable/ripple_effect2"
            android:id="@+id/comma"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text=","
            android:textSize="30dp" />
        <Button

            android:layout_margin="2dp"
            android:background="@drawable/ripple_effect"
            android:id="@+id/result"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="="
            android:textSize="30dp" />
    </LinearLayout>
</LinearLayout>